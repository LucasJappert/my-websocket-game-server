{
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "outDir": "dist",
      "rootDir": "server",
    },
    "include": [
      "server/**/*.ts",
      "server/**/*.js",
      "custom.d.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
